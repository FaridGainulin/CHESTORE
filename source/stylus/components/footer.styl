.footer
  background-color #000
  position: relative;
  z-index: 1;

  &__container
    padding 23px 0
    display: flex
    flex-direction: column
    gap: 10px
    align-items: center
    +above($breakpoints.md)
      flex-direction: row
      justify-content space-between

  &__left
    display: flex
    gap: 28px
    align-items: flex-end

  &__left-text,
  &__btn
    display: none
    +above($breakpoints.md)
      display: block

  &__privacy
    color: $color-grey
    text-decoration: underline

  &__connection
    display: flex
    align-items: center
    gap: 18px

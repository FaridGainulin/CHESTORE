.start-section
  background-color #000
  position relative
  z-index 1

  &__container
    padding 20px 0 20px 0
    +above($breakpoints.lg)
      padding 160px 0 362px 0

  &__box
    padding 20px 0 20px 0
    +above($breakpoints.lg)
      display: flex
      padding 82px 0 123px 0
      flex-direction: row
      justify-content space-between
      gap: 25px
    +above($breakpoints.xxl)
      gap: 152px

  &__box-left,
  &__box-right
    position relative
    display: flex
    flex-direction: column
    gap: 10px
    +above($breakpoints.sm)
      width 450px !important
    +above($breakpoints.md)
      width 450px !important
    +above($breakpoints.lg)
      width 555px !important
      gap: 25px

  &__box-inner
    display: flex
    flex-direction: row
    align-items: center
    gap: 20px

  &__icon
    width 25px
    height: 25px
    +above($breakpoints.lg)
      width 50px
      height: 50px

  &__line-right
    position absolute
    z-index -1
    width 1px
    background-color: $color-brown
    height: 115px;
    top: 12px;
    left: 12px;
    +above($breakpoints.lg)
      height: 250px;
      top: 12px;
      left: 24px;


  &__line-left
    position absolute
    z-index -1
    width 1px
    background-color $color-brown
    height: 150px
    top: 12px;
    left: 12px;
    +above($breakpoints.lg)
      height: 300px
      top: 17px;
      left: 24px;

  &__bottom
    position relative
    padding-top 20px
    text-align: center
    width 100%
    max-width: 556px
    margin: 0 auto
    +above($breakpoints.lg)
      padding-top 0
      margin 0
      text-align: start

  &__bottom-text
    padding 8px 0 20px 0
    +above($breakpoints.lg)
      padding 8px 0 28px 0

  &__bottom-img
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      width 420px
    +above($breakpoints.lg)
      margin 0
      position: absolute
      z-index -1
      width: 1261px;
      top: -359px;
      right: -837px;
    +above($breakpoints.xxl)
      top: -359px;
      right: -970px;

  &__bottom-arrow
    display: none
    +above($breakpoints.lg)
      display: block
      position: absolute
      z-index -1
      bottom: -113px;
      left: 200px;
    +above($breakpoints.xxl)
      bottom: -113px;
      left: 330px;

.start-item
  width 100%
  max-width: 360px
  margin 0 auto
  +above($breakpoints.lg)
    margin 0
.about-section
  background-color #000

  &__container
    position relative
    z-index 1
    padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 37px 0 160px 0

  &__quotes
    margin 0 auto

  &__title
    padding 20px 0 20px 0
    +above($breakpoints.lg)
      padding 20px 0 82px 0

  &__box
    position relative
    z-index -2
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 20px
    text-align: center
    padding-bottom 20px
    +above($breakpoints.lg)
      text-align: start
      flex-direction: row
      justify-content space-between
      padding-bottom 82px

  &__img
    width 300px
    height: auto
    margin 0 auto
    border-radius: 16px
    +above($breakpoints.sm)
      width 420px
    +above($breakpoints.lg)
      margin 0
    +above($breakpoints.xxl)
      width 552px

  &__bottom
    width 100%
    max-width: 420px
    margin 0 auto
    padding 48px 20px
    background-color #000
    border-radius: 16px
    position relative
    &:before
      content: ''
      position: absolute
      top: -2px
      right: -2px
      bottom: -2px
      left: -2px
      z-index: -1
      border-radius: inherit
      background: linear-gradient(130deg, #f08427, #000, #000, #f08427);
    +above($breakpoints.lg)
      padding 48px 75px
      max-width: 980px
    +above($breakpoints.xxl)
      padding 48px 83px

  &__phone
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      z-index -2
      width 400px
      height: auto
      bottom: -10px;
      left: -210px;
    +above($breakpoints.md)
      width 447px
      bottom: -74px;
      left: -229px;

  &__logo-icon
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      z-index -2
      width 313px
      height: 392px
      bottom: 243px;
      right: -178px;
    +above($breakpoints.md)
      width 403px
      height: 560px
      bottom: 145px;
      right: -243px;

  &__bottom-bg
    position: absolute
    z-index -3
    filter: blur(300px);
    background: rgb(240, 132, 39)
    bottom: 34px;
    right: -236px;
    width: 1344px;
    height: 320px;

  &__form
    padding-top 20px
    display: flex
    flex-direction: column
    gap: 8px
    +above($breakpoints.lg)
      flex-direction: row
      flex-wrap: wrap
      padding-top 30px

.about-item
  +above($breakpoints.lg)
    width 266px !important
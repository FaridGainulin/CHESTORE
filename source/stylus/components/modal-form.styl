.form-modal
  &__feedback
    position relative
    border-radius: 10px;
    background: $color-black
    color: $color-white
    padding: 12px
    box-shadow: 0px 4px 50px 0px rgba(240, 132, 39, 0.5)
    &:before
      content: ''
      position: absolute
      top: -2px
      right: -2px
      bottom: -2px
      left: -2px
      z-index: -1
      border-radius: inherit
      background: linear-gradient(130deg, #f08427, #000, #000, #f08427);

  &__wrapper
    border 1px solid $color-black
    border-radius: 10px
    padding 20px
    +above($breakpoints.sm)
      padding 30px
    +above($breakpoints.xxl)
      padding: 30px

  &__info-title
    font-size: 14px;
    margin: 0 0 18px 0
    font-family: "Montserrat-Bold"
    font-weight: 700
    +above($breakpoints.sm)
      font-size: 18px
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      font-size: 20px
    br
      display: block

  &__feedback-item
    max-width: 255px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.xxl)
      max-width: 343px

  &__feedback-input
    height: 55px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 60px
      margin-bottom: 15px
    +above($breakpoints.xxl)
      height: 64px
      margin-bottom: 20px
    .input
      &__field
        height: 100%
        border: none

  &__button
    margin-bottom: 14px
    .btn
      height: 50px
      +above($breakpoints.sm)
        height: 60px
      +above($breakpoints.xxl)
        height: 58px

  &__agree
    font-size: 10px;
    line-height: 13px;
    +above($breakpoints.sm)
      font-size: 11px;
      line-height: 13px;
    +above($breakpoints.md)
      font-size: 12px;
      line-height: 14px;
    +above($breakpoints.xxl)
      font-size: 13px;
      line-height: 15px;
    a
      text-decoration: underline
